<%- include('views/includes/head.ejs') %>

  <body>
    <% if (loginMessage) { %>
    <div class="message-wrapper">
      <div class="profile-image"><img src="/<%= profileImage %>" alt="user profile image" /></div>
      <p><%= loginMessage %></p>
    </div>
    <% } %>

    <div class="dark-mode-wrapper">
      <button class="theme-switch-btn" id="theme-switch-btn">
        <i class="fa-solid fa-moon"></i>
      </button>
    </div>

    <div class="page-wrapper">

      <div class="circle"></div>

      <div class="brain">
        <%- include('views/includes/index-svg.ejs') %>
      </div>

      <div class="menu-bar">
        <div class="menu-title">
          <h1>Mind Rush</h1>
        </div>
        <div class="menu-links">
          <ul>
            <li><a href="/banana-math" id="start-game" class="active">Start Game</a></li>
            <li><a href="/leaderboard">Leaderboard</a></li>
            <% if(!isAuthenticated) { %>
            <li><a href="/login" id="login-btn">Login</a></li>
            <li><a href="/signup">Sign Up</a></li>
            <%} else { %>
            <li><a href="/profile" id="profile-btn">Profile</a></li>  
            <li><a href="/logout" id="logout-btn">Logout</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
