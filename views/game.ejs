  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="icons/icon.png" type="image/png">
    <link rel="stylesheet" href="css/game.css">
    <link rel="stylesheet" href="<%= cssFile %>">
    <title><%= pageTitle %></title>
  </head>
  <body>
    <div class="page-wrapper">
      <div class="title-wrapper">
        <h1><%= heading %></h1>
      </div>
      <div class="center-wrapper">
        <div class="left-layout">
          <div class="timer-box">
            <div class="timer">
              <div class="hours">00</div>
              <div class="dot">:</div>
              <div class="minutes">03</div>
              <div class="dot">:</div>
              <div class="seconds">29</div>
            </div>
          </div>
          <div class="game-play-hint">
            <p class="hint-text"><%= hintText %></p>
          </div>
        </div>
        <div class="central-layout">
          <div class="game">
                                  
          </div>
        </div>
        <div class="right-layout">
          <div class="computer-response-text"><%= computerResponse %></div>
          <div class="computer-response-image"><img src="<%= svgPath %>" alt=""></div>
        </div>
      </div>
      <div class="cta-btn-wrapper">
        <%- include('./includes/cta-btn') %>
      </div>
    </div>
  </body>
  </html>